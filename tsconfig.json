{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*" : ["."],
      "@icons/*" : ["./assets/icons/*"],
      "@components/*" : ["./src/components/*"],
      "@images/*" : ["./assets/images/*"],
      "@screens/*" : ["./src/screens/*"],
      "@styles/*" : ["./src/styles/*"],
    },
  }
}